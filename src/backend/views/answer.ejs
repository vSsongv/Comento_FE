<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>test</title>
  </head>
  <body>
    <% var langList = [ "All", "C", "JAVA", "JavaScript", "Python" ]; %>
    <table width="700" border="0" align="center">
      <tr>
        <td width="40%">
          <%=postCount%> articles &nbsp; &nbsp; &nbsp;
          <select id="lang" onChange="changeLang()">
            <% for (var i = 0; i < langList.length; i++) { %>
            <option value="<%=i%>"><%=langList[i]%></option>
            <% } %>
          </select>
          <script language="javascript">
            function initLang() {
              var elem = document.getElementById("lang");
              var cnt = elem.options.length;
              for (var i = 0; i < cnt; i++) {
                if (elem.options[i].value == "<%=lang%>") {
                  elem.options[i].selected = true;
                  break;
                }
              }
            }

            function changeLang() {
              var elem = document.getElementById("lang");
              var selectValue = elem.options[elem.selectedIndex].value;
              location.href = "/answer?lang=" + selectValue;
            }

            window.onload = function () {
              initLang();
            };
          </script>
        </td>
        <td width="60%"></td>
      </tr>
      <tr>
        <td valign="top">
          <ul>
            <% for (var i = 0; i < postList.length; i++) { %>
            <li style="margin: 10px">
              <%=postList[i].nickname%><br />
              <a href="/answer?id=<%=postList[i].mentoringId%>&lang=<%=lang%>"
                ><%=postList[i].title%></a
              ><br />
              <%=postList[i].date%> <%=langList[postList[i].language]%>
            </li>
            <% } %>
          </ul>
        </td>
        <td valign="top">
          <table
            width="100%"
            height="100%"
            cellspacing="0"
            cellpadding="5"
            border="0"
          >
            <tr>
              <td><%=article.title%></td>
              <td align="right">
                <%=article.nickname%> &nbsp; <%=langList[article.language]%>
                &nbsp; <%=article.date%>
              </td>
            </tr>
            <tr>
              <td colspan="2" style="padding: 0">
                <hr
                  style="
                    width: 100%;
                    height: 2px;
                    border: 0;
                    background-color: #b8b8b8;
                  "
                />
              </td>
            </tr>
            <tr height="300">
              <td colspan="2" valign="top">
                <%=article.content%>
                </br></br>
<% for (var i = 0; i < article.content_image.length; i++) { %>
                file#<%=i+1%> : <%=article.content_image[i]%></br>
<% } %>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
